		}
		else{
			document.getElementById("side-content").innerHTML='<div style="padding-left:28%;padding-top:30%;"><label style="font-size:15px;">Visit the page for all the contact information</label><a href="/contact" style="font-size:20px;">Click Here</a></div><a href="#0" class="cd-close"></a>';
		}
	}
