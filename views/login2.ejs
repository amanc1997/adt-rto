	<title>RTO</title>
</head>
<body>
	<header class="cd-main-header">
		<h1 class="deepshadow">WELCOME TO RTO MAIN PAGE</h1>
		<hr>
	</header>

	<ul class="cd-pricing">
		<li>
			<header class="cd-pricing-header">
				<h2>Sign In</h2>
			</header> <!-- .cd-pricing-header -->

			<div class="cd-pricing-features" style="height: 92%;padding-left:10%;padding-right:10%;">
				<em><img class="icons" src="/login.png"></em>
			</div> <!-- .cd-pricing-features -->

			<footer class="cd-pricing-footer">
				<a href="#0" onclick="change_content(1);">Select</a>
			</footer> <!-- .cd-pricing-footer -->
		</li>
		
		<li>
			<header class="cd-pricing-header">
				<h2>Sign Up</h2>
			</header> <!-- .cd-pricing-header -->

			<div class="cd-pricing-features">
				<em><img class="icons" src="/signup.png" style></em>
			</div> <!-- .cd-pricing-features -->

			<footer class="cd-pricing-footer">
				<a href="/contact" onclick="change_content(2);">Select</a>
			</footer> <!-- .cd-pricing-footer -->
		</li>

		<li>
			<header class="cd-pricing-header">
				<h2>Contacts</h2>
			</header> <!-- .cd-pricing-header -->

			<div class="cd-pricing-features">
				<em><img class="icons" src="/contacts.png" style="padding-bottom:3%;padding-top: 0"></em>
			</div> <!-- .cd-pricing-features -->

			<footer class="cd-pricing-footer">
				<a href="#" onclick="change_content(3)">Select</a>
			</footer> <!-- .cd-pricing-footer -->
		</li>
	</ul> <!-- .cd-pricing -->

	<div class="cd-form">
		
		<div class="cd-plan-info">
			<!-- content will be loaded using jQuery - according to the selected plan -->
		</div>

		<div class="cd-more-info">
			<h3>Need help?</h3>
			<p>Contact the nearest RTO for further information</p>
		</div>

		<div id="side-content">
		</div>
	</div> <!-- .cd-form -->
	
	<div class="cd-overlay"></div> <!-- shadow layer -->
<script src="/jquery-2.1.4.js"></script>
<script src="/velocity.min.js"></script>
<script src="/main.js"></script> <!-- Resource jQuery -->
<script type="text/javascript">
	function change_content(choice){
		if(choice==1){
			document.getElementById("side-content").innerHTML='<form method="POST" action="/loggedin"><fieldset><legend>Enter Details</legend><p class="half-width" style="margin-top:2%;margin-left: 39%;"><label style="padding-left: 14%;">Admin Type</label><label>&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;</label><b><span class="cd-select"><select name="is_admin" id="card-expiry-month" style="width:12vw;text-align: center;" class="text-style"><option class="text-style">Admin</option><option class="text-style">User</option></select></span></b></p><br><div style="padding-left: 25%;padding-top: 12%;width: 80%;"><label for="userName" style="padding-left: 40%;">Email</label><input type="email" id="userName" name="email" required></div><div style="padding-left: 25%;width: 50%;width: 80%;"><label for="userEmail" style="padding-left: 40%;">Password</label><input type="password" id="userEmail" name="password" required></div></fieldset><fieldset><div><input type="submit" value="Login" style="margin-left: 45%;float:left;"></div></fieldset><fieldset><legend>Important Note</legend><label style="font-size: 25px;margin-top: 5%;color: #660066;">Do not share your login information with anyone!</label></fieldset></form><a href="#0" class="cd-close"></a>';


		}
		else if(choice==2){
			document.getElementById("side-content").innerHTML='<form method="POST" action="/register"><fieldset><legend>Account Info</legend><div class="half-width"><label for="userName">First Name</label>'+
'<input type="text" id="userName" name="fname" required></div><div class="half-width"><label for="userEmail">Last Name</label><input type="text" id="userEmail" name="lname" required></div><p class="half-width">'+
'<label>&emsp;&emsp;Gender&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;Blood '+'Group&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;</label><b><span class="cd-select"><select name="gen" id="card-expiry-month" class="text-style"><option class="text-style">Male</option><option class="text-style">Female</option><option>Others</option></select></span><label>&emsp;&emsp;&emsp;&emsp;&emsp;</label>'+
'<span class="cd-select"><select name="bgo" id="card-expiry-month" class="text-style"><option class="text-style">A+</option><option class="text-style">A-</option><option class="text-style">B+</option><option class="text-style">B-</option><option class="text-style">O+</option><option class="text-style">O-</option><option class="text-style">AB+</option><option class="text-style">AB-</option></select></span></b></p><p class="half-width"><label>Qualification&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;</label><b><span class="cd-select"><select name="qual" id="card-expiry-month" class="text-style"><option value="SSLC" class="text-style">High School</option><option value="PUC" class="text-style">Pre University</option><option value="UG" class="text-style">Under Graduate</option><option value="PG" class="text-style">Post Graduate</option></select></span></b></p><div><label for="userPassword">Date</label><input type="date" id="userPassword" name="dob" class="text-style" placeholder="YYYY-MM-DD"></div><div><label for="userPassword">Address</label>'+
