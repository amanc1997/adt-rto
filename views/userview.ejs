<body>
    <script>
   var fines=[<%-fines%>];
const date_part=''
var main_content;
var fine_part=date_part;
function show_home_page(){
    document.getElementById("alters").innerHTML=main_content;
    let card = document.getElementsByClassName("card")[0];
    card.addEventListener("click", function () {
        card.classList.toggle("turn");
    });

}
    for(let i=0;i<fines.length;i++){ 
        fine_part+='<div class="fines"><p id="fine-amount"><span class="fine-titles">AMOUNT&emsp;&nbsp; :</span><span class="fine-content">Rs.'+fines[i].amount+'</span></p><p id="fine-location"><span class="fine-titles">LOCATION&ensp;&nbsp; :</span><span class="fine-content">'+fines[i].flocation+
        '</span></p><p id="fine-date"><span class="fine-titles">DATE&emsp;&ensp;&nbsp; :</span><span class="fine-content">'+fines[i].date+
        '</span></p><p id="fine-description"><span class="fine-titles">DESCRIPTION :</span><span class="fine-content">'+fines[i].desc+'</span></p></div>';
    }
function change_color(obj,choice){
    var cur_ele=document.getElementById("activ");
    if(cur_ele != null){
    cur_ele.removeAttribute("id");
    }
    obj.setAttribute("id","activ");
    if(choice==0){
            show_home_page();

    }
    else{
        document.getElementById("alters").innerHTML=fine_part;
    }

}

    </script>

    <div class="wrapper">
        <!-- Sidebar  -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3>USER VIEW</h3>
            </div>

            <ul class="list-unstyled components">
                
                <li class="active">
                    <a href="#homeSubmenu"  id="activ"
                    onclick="change_color(this,0)">Home</a>
                </li>
                <li>
                    <a href="#" onclick="change_color(this,1)">Fines</a>
                </li>
                <li>
                    <a href="/contact">Contact</a>
                </li>
                <li>
                    <a href="/login" >LogOut</a>
                </li>
            </ul>
        </nav>

        <!-- Page Content  -->
        <div id="content">

	            <nav class="navbar navbar-expand-lg navbar-light bg-light">
	                <div class="container-fluid spacing">
	                    <button type="button" id="sidebarCollapse" class="btn btn-info">
	                        <i class="fas fa-align-left"></i>
